<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Href("~/Content/TicketsStyle.css")" rel="stylesheet">
    @*Styles References*@
    <link href="~/backend-jquery/app/css/bootstrap.css" rel="stylesheet" />
    <link href="~/backend-jquery/app/css/app.css" rel="stylesheet" />
    @*Animation References*@
    <link href="~/backend-jquery/vendor/animate.css/animate.min.css" rel="stylesheet" />
    @*Icons Refences*@
    @*<link href="~/backend-jquery/vendor/weather-icons/css/weather-icons.min.css" rel="stylesheet" />*@
    @*Whirl Spinners*@
    @*<link href="~/backend-jquery/vendor/whirl/dist/whirl.css" rel="stylesheet" />*@
    @*Icons Refences*@
    @*<link href="~/backend-jquery/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" />*@
    <link href="~/backend-jquery/vendor/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
    @*Loaders*@
    <link href="~/backend-jquery/vendor/loaders.css/loaders.css" rel="stylesheet" />
    @*Star Ranking*@
    <link href="~/Content/jquery.rateyo.min.css" rel="stylesheet" />
    <link href="~/Content/RateStyle.css" rel="stylesheet" />
    @*Sweet alerts*@
    <link href="~/Content/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
    @*Toast*@
    <link href="~/Content/alertify.default.css" rel="stylesheet" />
    <link href="~/Content/alertify.core.css" rel="stylesheet" />

    @RenderSection("header", false)
</head>
<body>

    @if (ViewBag.User != null)
    {
        <header class="topnavbar-wrapper">
            <nav role="navigation" class="navbar topnavbar">
                <div class="navbar-header">
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav main-nav">
                        <li><img src="~/Resources/mindLogo-collapsed.png" /></li>
                        <li id="All" class="nav-option">@Html.ActionLink("Tickets", "All", "Ticket", new { area = "" }, new { @class = "" })</li>

                        @if (ViewBag.User.Name != null)
                        {
                            <li id="Add" class="nav-option">@Html.ActionLink("Ticket Nuevo", "Add", "Ticket")</li>
                        }
                            <li id="Reports" class="nav-option">@Html.ActionLink("Reportes", "Report", "Ticket")</li>
                        <li class="pull-right">@Html.ActionLink("Cerrar sesión", "Logout", "User")</li>
                    </ul>
                </div>
                <!--Responsive-->
                 <div class="nav-wrapper">
                                            <ul class="nav navbar-nav visible-xs">
                        
                        <li><img src="~/Resources/mindLogo-collapsed.png" /></li>
                        
                        <li id="All">@Html.ActionLink("Tickets", "All", "Ticket", new { area = "" }, new { @class = "" })</li>
                        
                             @if (ViewBag.User.Name != null)
                             {
                                 <li id="Add">@Html.ActionLink("Ticket Nuevo", "Add", "Ticket")</li>
                             }
                             @if (ViewBag.User.Name == null)
                            {
                                <li id="Reports" class="nav-option">@Html.ActionLink("Reportes", "Report", "Ticket")</li>
                            }
 
                        <li class="visible-md visible-lg visible-xs pull-right">@Html.ActionLink("Cerrar sesión", "Logout", "User")</li>
                    </ul>
                    
                </div>
                

            </nav>
        </header>
    }

    @if (ViewBag.User != null)
    {
        if (ViewBag.User.Name != null)
        {
            <div class="welcome-tag">Bienvenido @ViewBag.User.Name</div>
        }

    }

    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    @*Javascript Template Files.*@
    <script src="~/backend-jquery/vendor/modernizr/modernizr.custom.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.rateyo.min.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>
    <script src="~/Scripts/_layout.js"></script>
    @*Toast*@
    <script src="~/Scripts/alertify.js"></script>
    @*loader*@
    <script src="~/Scripts/loader.js"></script>
</body>
</html>
